<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
    colors="true">
    <testsuites>
        <testsuite name="Cart Test Suite">
            <directory phpVersion="5.3.0" phpVersionOperator=">=">./tests/</directory>
            <file>./vendor/someone/mylib/tests/MyClassTest.php</file>
        </testsuite>
    </testsuites>
	<logging>
	    <log type="coverage-html"
	        target="./report"
	        charset="UTF-8"
	        highlight="false"
	        lowUpperBound="35"
	        highLowerBound="70" />
	</logging>
	<filter>
	    <blacklist>
	        <directory>/path/to/.composer</directory>
	    </blacklist>
	</filter>
</phpunit>